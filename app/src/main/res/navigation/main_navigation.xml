<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loadingScreen">

    <fragment
        android:id="@+id/loadingScreen"
        android:name="io.github.jasvilladarez.ello.main.LoadingScreen"
        android:label="LoadingScreen">
        <action
            android:id="@+id/action_loadingScreen_to_browseFragment"
            app:clearTask="true"
            app:destination="@id/browseFragment"
            app:popUpTo="@id/loadingScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/browseFragment"
        android:name="io.github.jasvilladarez.ello.browse.BrowseFragment"
        android:label="BrowseFragment" />
</navigation>